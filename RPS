
<script>

function numberGen() {
    return (Math.floor(Math.random() * 3))
}


function playGen(num) {
    if (num == 0){
        return "rock"
    } else if  (num == 1) {
        return "paper"
    }
    else return ("scissors")
}

function check(pNum, cNum){
    if (pNum - cNum == 0){
        return "draw"
    } else if (pNum - cNum == -2){
        return "player wins"
    } else if (pNum - cNum == 1){
        return "player wins"
    } else {
        return "CPU wins"
    }
}

function playRound(){
    console.log("0 for rock, 1 for paper, 2 for scissors");
    let choice = parseInt(prompt());
    let cpuChoice = numberGen();
    console.log("You played " + playGen(choice))
    console.log("CPU played " + playGen(cpuChoice));
    console.log(check(choice, cpuChoice))

}

playRound()

</script>